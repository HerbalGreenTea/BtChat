<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/chatFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.btchat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_connectDevFragment"
            app:destination="@id/connectDevFragment" />
    </fragment>
    <fragment
        android:id="@+id/connectDevFragment"
        android:name="com.example.btchat.ConnectDevFragment"
        android:label="fragment_connect_dev"
        tools:layout="@layout/fragment_connect_dev" />
</navigation>